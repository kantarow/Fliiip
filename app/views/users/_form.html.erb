<%= form_for user do |f| %>
  <div class="field">
    <%= f.label :id_name, "User ID" %>
    <%= f.text_field :id_name %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :bio %>
    <%= f.text_area :bio, rows: 10 %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Submit", class: "btn btn-submit" %>
<% end %>
